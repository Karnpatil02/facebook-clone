<div style="margin-left: 50%;">
  <%= @user.first_name%> <%= @user.last_name %>

</div>
<div style="background-color: lightblue;">
  <%= link_to 'timeline', posts_path %>ï¿¼
  <%= link_to 'friends', users_path %>
  <%= link_to 'edit profile', edit_user_path(current_user) %>
  <%= link_to 'delete profile', root_path, data: {turbo_method: :delete} %>

</div>
  
<p style="color: green"><%= notice %></p>

<div class="container">
<div style="width:500px;">

</div>

<div id="posts">

<table class="table table-bordered">
<thead>
  <tr>
  <th scope="col">title</th>
  <th scope="col">post_by</th>
  <th scope="col">caption</th>
  <th scope="col">image</th>
  <th scope="col">links</th>
  </tr>
</thead>
<tbody>

<% @posts.each do |post| %>

<div id="<%= dom_id post %>">
<tr>
<td><%= post.title %></td>
<td><%= post.author%></td>
<td><%= post.content%></td>
<td><%= image_tag(post.image)%></td>

<td><%= link_to "Show", post %><%= link_to "edit",edit_post_path(post), style: "margin-left: 10%" %> <%= button_to "Destroy", post, method: :delete %>

</tr>
<% end %>
</tbody>
</table>    
</div>

<style>
a:link {
text-decoration: none;
color: black;
}

a:visited {
text-decoration: none;
color: black;
}

a:hover {
text-decoration: underline;
color: blue;
}

a:active {
text-decoration: underline;
color: green;
}
</style>



