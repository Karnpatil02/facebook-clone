<h1>Posts</h1>
<%= link_to "New post", new_post_path %>
<div id="posts">
  <% @posts.each do |post| %>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
    <div class="row">
      <div class="col-md-8 mb30">
          <div class="card">
              <div>
                  <!-- Tab panes -->
                  <div class="tab-content admin-tab-content pt30">
                      <div role="tabpanel" class="tab-pane active show" id="t1">
                          <ul class="activity-list list-unstyled">
                              <li class="clearfix">
                                  <div class="float-left">
                                      <a href="#"><img src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="" class="img-fluid rounded-circle"></a>
                                  </div>
                                  <div class="act-content">
                                      <div class="font400">
                                          <a href="#" class="font600"><%= post.author %> 
                                          </a>
                                        </div>
                                      <span class="text-small"><%= post.created_at.to_time.utc%></span>
                            <div id="<%= dom_id post %>">
                                    <p><%= post.title %></p>
                                    <p style="margin-top: 10px;">    
                                      <% if post.image.present? %>
                                        <%= image_tag(post.image)%>
                                      <% end %>
                                    </p>
                                    <p style="margin-top: 10px;">
                                      <%= post.content%>
                                    </p>
                                    <br />
                                     <p>
                                       <%= link_to "Show this post", post ,style: " margin-top: 20px"%>
                                      </p>
                                  </div> 
                               </li>    
                          </ul>
                      </div>
                  </div>
              </div>
          </div>
      </div>
    </div>
</div>
<br />
          
  <% end %>
  
</div>


